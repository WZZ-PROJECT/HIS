/* pages/information.wxss */
.information-page {
  text-align: left;
  padding: 30rpx 24rpx 0;
}
.list-item {
  margin-bottom: 24rpx;
  border-radius: 16rpx;
  display: flex;
}
.item-picture {
  width: 200rpx;
  height: 200rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.item-info {
  padding-left: 20rpx;
  width: 0;
  flex: 1;
}
image {
  max-width: 100%;
  max-height: 100%;
}
.name {
  font-size: 32rpx;
  line-height: 56rpx;
}
.expert, .detail {
  font-size: 28rpx;
}
.expert {
  width: 100%;
  line-height: 48rpx;
}
.detail {
  height: 80rpx;
  line-height: 40rpx;
  overflow: hidden;
}